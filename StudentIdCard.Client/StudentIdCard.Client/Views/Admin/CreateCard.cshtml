@model StudentIdCard.Client.Models.Card;


<!DOCTYPE html>
<html lang="tr">
<head>
    <link rel="icon" type="image/png" href="~/images/DB_16х16.png">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="School App">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>School App</title>

    <!-- Add to homescreen for Chrome on Android -->
    <meta name="mobile-web-app-capable" content="yes">


    <!-- Add to homescreen for Safari on iOS -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="apple-mobile-web-app-title" content="School App">


    <!-- Tile icon for Win8 (144x144 + tile color) -->
    <meta name="msapplication-TileImage" content="~/images/touch/ms-touch-icon-144x144-precomposed.png">
    <meta name="msapplication-TileColor" content="#3372DF">

    <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,300,100,700,900' rel='stylesheet'
          type='text/css'>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/lib/getmdl-select.min.css">
    <link rel="stylesheet" href="~/css/lib/nv.d3.min.css">
    <link rel="stylesheet" href="~/css/application.min.css">
    <!-- endinject -->

</head>
<body>

    <div class="mdl-layout mdl-js-layout color--gray is-small-screen login">
        <main class="mdl-layout__content">
            <div class="mdl-card mdl-card__login mdl-shadow--2dp">
                <div class="mdl-card__supporting-text color--dark-gray">
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                            <span class="mdl-card__title-text text-color--smooth-gray">School App</span>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                            <span class="login-name text-color--white">Kayıt Ol</span>
                        </div>
                        <form asp-action="CreateCard" method="post" enctype="multipart/form-data">
                            <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone">
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Name" required id="name">
                                    <label class="mdl-textfield__label" for="name">Öğrenci Adı</label>
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Surname" required id="password">
                                    <label class="mdl-textfield__label" for="Surname">Öğrenci Soyadı</label>
                                    <span asp-validation-for="Surname"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="ParentName" required id="password">
                                    <label class="mdl-textfield__label" for="Surname">Veli Adı</label>
                                    <span asp-validation-for="ParentName"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="ParentPhoneNumber" required id="password">
                                    <label class="mdl-textfield__label" for="Surname">Veli Numarası</label>
                                    <span asp-validation-for="ParentPhoneNumber"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="Balance" required id="password">
                                    <label class="mdl-textfield__label" for="Surname">Kart Bakiyesi</label>
                                    <span asp-validation-for="Balance"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="SchoolId" required id="password">
                                    <label class="mdl-textfield__label" for="Surname">Okul Numarası</label>
                                    <span asp-validation-for="SchoolId"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="ParentUserName" required id="password">
                                    <label class="mdl-textfield__label" for="Surname">Veli Kullanıcı Adı</label>
                                    <span asp-validation-for="ParentUserName"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="text" asp-for="ParentPassword" required id="password">
                                    <label class="mdl-textfield__label" for="Surname">Veli Parola</label>
                                    <span asp-validation-for="ParentPassword"></span>
                                </div>
                                <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label full-size">
                                    <input class="mdl-textfield__input" type="file" name="file" >
                                    <label class="mdl-textfield__label" for="file"></label>
                             
                                </div>
                            </div>
                            <div class="mdl-cell mdl-cell--12-col mdl-cell--4-col-phone submit-cell">
                         
                                <div class="mdl-layout-spacer"></div>
                                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised color--light-blue">
                                    Oluştur
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <!-- inject:js -->
    <script src="~/js/d3.min.js"></script>
    <script src="~/js/getmdl-select.min.js"></script>
    <script src="~/js/material.min.js"></script>
    <script src="~/js/nv.d3.min.js"></script>
    <script src="~/js/layout/layout.min.js"></script>
    <script src="~/js/scroll/scroll.min.js"></script>
    <script src="~/js/widgets/charts/discreteBarChart.min.js"></script>
    <script src="~/js/widgets/charts/linePlusBarChart.min.js"></script>
    <script src="~/js/widgets/charts/stackedBarChart.min.js"></script>
    <script src="~/js/widgets/employer-form/employer-form.min.js"></script>
    <script src="~/js/widgets/line-chart/line-charts-nvd3.min.js"></script>
    <script src="~/js/widgets/map/maps.min.js"></script>
    <script src="~/js/widgets/pie-chart/pie-charts-nvd3.min.js"></script>
    <script src="~/js/widgets/table/table.min.js"></script>
    <script src="~/js/widgets/todo/todo.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- endinject -->

</body>
</html>